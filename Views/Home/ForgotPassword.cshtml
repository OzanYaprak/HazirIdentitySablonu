@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "ForgotPassword";
}

@section Scripts
    {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="mb-5 text-center">Şifre Sıfırlama</h2>

            @if (TempData["PasswordResetSuccess"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["PasswordResetSuccess"]
                </div>
            }

            <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert"></div>

            <form asp-controller="Home" asp-action="ForgotPassword" method="post">
                <div class="form-group">
                    <label for="Email" class="col-form-label" asp-for="Email"></label>
                    <input asp-for="Email" class="form-control mb-2">
                    <span class="text-danger" asp-validation-for="Email"></span>
                    <span class="text-muted">* Şifre yenileme linki, e-posta adresinize gönderilecektir.</span>
                </div>
                <div class="form-group text-center mt-3">
                    <button type="submit" class="btn btn-primary">Sıfırlama Bağlantısı Gönder</button>
                </div>
            </form>
        </div>
    </div>
</div>
