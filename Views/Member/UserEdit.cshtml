@model UserEditViewModel
@{
    ViewData["Title"] = "UserEdit";
}

@section Scripts
    {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}




<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2 class="mb-5 text-center">Hesap Bilgileri Güncelle</h2>

        @if (TempData["UserEditSucceedMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["UserEditSucceedMessage"]
            </div>
        }

        <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert"></div>

        <form asp-controller="Member" asp-action="UserEdit" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="UserName" class="form-label" asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control">
                <span class="text-danger" asp-validation-for="UserName"></span>
            </div>

            <div class="mb-3">
                <label for="Email" class="form-label" asp-for="Email"></label>
                <input asp-for="Email" class="form-control">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <div class="mb-3">
                <label for="Phone" class="form-label" asp-for="Phone"></label>
                <input asp-for="Phone" class="form-control">
                <span class="text-danger" asp-validation-for="Phone"></span>
            </div>

            <div class="mb-3">
                <label for="DateOfBirth" class="form-label" asp-for="DateOfBirth"></label>
                <input asp-for="DateOfBirth" class="form-control" type="date">
                <span class="text-danger" asp-validation-for="DateOfBirth"></span>
            </div>

            <div class="mb-3">
                <label for="City" class="form-label" asp-for="City"></label>
                <input asp-for="City" class="form-control">
                <span class="text-danger" asp-validation-for="City"></span>
            </div>


            <div class="mb-3">
                <label for="Gender" class="form-label" asp-for="Gender"></label>
                <select class="form-control" asp-for="Gender" asp-items="ViewBag.genderList">
                    <option value="" disabled selected>Cinsiyet Seçiniz</option>
                </select>
                <span class="text-danger" asp-validation-for="Gender"></span>
            </div>

            <div class="mb-3">
                <label for="Picture" class="form-label" asp-for="Picture"></label>
                <input asp-for="Picture" class="form-control" type="file">
                <span class="text-danger" asp-validation-for="Picture"></span>
            </div>

            <div class="row justify-content-end">
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary">Bilgileri Güncelle</button>
                </div>
            </div>
        </form>
    </div>
</div>

