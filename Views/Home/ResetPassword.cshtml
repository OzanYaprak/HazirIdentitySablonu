@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2 class="mb-5 text-center">Şifre Yenileme</h2>

        @if (TempData["PasswordResetSucceedMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["PasswordResetSucceedMessage"]
            </div>
        }

        <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert"></div>

        <form asp-controller="Home" asp-action="ResetPassword" method="post">
            <div class="mb-3">
                <label for="Password" class="form-label" asp-for="Password"></label>
                <input asp-for="Password" class="form-control">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>

            <div class="mb-3">
                <label for="PasswordConfirm" class="form-label" asp-for="PasswordConfirm"></label>
                <input asp-for="PasswordConfirm" class="form-control">
                <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
            </div>

            <div class="row justify-content-end">
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary">Şifreyi Değiştir</button>
                </div>
            </div>
        </form>
    </div>
</div>

