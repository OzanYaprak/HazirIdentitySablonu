@model List<AssingRoleViewModel>
@{
    ViewData["Title"] = "AssingRole";
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h1 class="text-center mb-4">Ünvan Atama</h1>

            @if (TempData["SucceededMessage"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["SucceededMessage"]
                </div>
            }

            <form asp-controller="Roles" asp-action="AssingRole" asp-route-userid="ViewBag.userid" method="post">

                @for (int i = 0; i < Model.Count; i++) //i ye 0 atadık ve model listesi içerisinde kaç tane rol varsa bunları 1 arttırarak for ile döndürdük
                {
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" asp-for="@Model[i].Exist"> @*Model[i] -modelin sıfırıncı indeksi demek (i ye sıfır vermiştik)*@
                        <label class="form-check-label" for="exampleCheck1">@Model[i].RoleName</label>
                        <input type="hidden" asp-for="@Model[i].RoleName" />
                        <input type="hidden" asp-for="@Model[i].RoleID" />
                    </div>
                }

                <div class="form-group d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Ünvan Ata</button>
                </div>

            </form>
        </div>
    </div>

    <div class="row justify-content-center mt-5">
        <div class="col-md-4">
            <div class="d-grid gap-2">
                <a asp-action="Index" class="btn btn-secondary">Ünvan Listesi</a>
                <a asp-controller="Home" asp-action="UserList" class="btn btn-secondary">Kullanıcı Listesi</a>
            </div>
        </div>
    </div>
</div>