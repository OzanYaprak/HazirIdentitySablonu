@model PasswordChangeViewModel
@{
    ViewData["Title"] = "PasswordChange";
}

@section Scripts
    {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}




<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2 class="mb-5 text-center">Şifre Değiştir</h2>

        @if (TempData["PasswordChangeSucceedMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["PasswordChangeSucceedMessage"]
            </div>
        }

        <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert"></div>

        <form asp-controller="Member" asp-action="PasswordChange" method="post">
            <div class="mb-3">
                <label for="OldPassword" class="form-label" asp-for="OldPassword"></label>
                <input asp-for="OldPassword" class="form-control">
                <span class="text-danger" asp-validation-for="OldPassword"></span>
            </div>

            <div class="mb-3">
                <label for="NewPassword" class="form-label" asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control">
                <span class="text-danger" asp-validation-for="NewPassword"></span>
            </div>

            <div class="mb-3">
                <label for="NewPasswordConfirm" class="form-label" asp-for="NewPasswordConfirm"></label>
                <input asp-for="NewPasswordConfirm" class="form-control">
                <span class="text-danger" asp-validation-for="NewPasswordConfirm"></span>
            </div>

            <div class="row justify-content-end">
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary">Şifreyi Güncelle</button>
                </div>
            </div>
        </form>
    </div>
</div>
